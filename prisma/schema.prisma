generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id    String   @id @default(uuid())
  email String   @unique
  name  String
  role  Role
  password String

  @@map("users")
}

model Book {
  id         String   @id @unique  
  title      String
  authors    String   // จะเก็บเป็น string รวม เช่น "Author1, Author2"
  publisher  String
  thumbnail  String

  @@map("books")
}

enum Role {
  CLIENT
  DEVELOPER
}